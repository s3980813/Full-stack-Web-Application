<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="addCourse.css">
</head>

<body>
    <!--Display navigation bar-->
    <%- include("partials/navbar.ejs", {title: "Order Placement" }) %>

        <!-- Search Modal -->
        <div class="modal_search" id="search">
            <a href="#" class="close_search"></a>
            <div class="search_body">
                <input class="search_button" type="text" placeholder="Search" name="search">
            </div>
        </div>
        <!--End of navigation bar-->

        <!-- page title -->
        <div class="PageTitle">
            <h1>Course Update</h1>
            <hr>
        </div>


        <!-- Start of main content -->
        <div class="mainContent">
            <div class="ProfileSection">
                <img src="<%= user.picture %>" alt="<%= user.name %> Profile picture">
                <div class="InstructorName">
                    <h2 id="InstructorName">
                        <%= Instructor.name %>
                    </h2>
                    <p id="Role">Instructor</p>
                </div>
            </div>
            <div class="addCourseForm">
                <form action="#" id="addCourse">
                    <label for="courseName">Course Name:</label>
                    <input type="text" id="courseName" name="courseName" required>
                    <br>

                    <label for="Price">Price:</label>
                    <span class="dollarSign">$<input type="number" id="Price" name="Price" required></span>
                    <br>

                    <label for="coursePicture">Course Image:</label>
                    <input type="file" id="coursePicture" name="coursePicture" accept="image/*" required>
                    <br>

                    <label for="Description">Description:</label><br>
                    <textarea id="Description" name="Description" cols="50" rows="10"
                        placeholder="write description here..." required></textarea>
                    <br>

                    <button type="reset" class="reset">Reset</button>
                    <button type="submit" class="submit" onclick="redirectCourseDetailPage()">Submit</button>
                </form>
            </div>

        </div>
        <!-- End of main content -->
        <!-- Display footer -->
        <%- include("partials/footer.ejs") %>
            <script>
                function redirectCourseDetailPage() {
                    alert("Adding course to the server successfully!")
                    window.location.assign("coursedetail.ejs")
                }
            </script>
</body>

</html>