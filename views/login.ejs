<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/login.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
</head>

<body>
    <!-- NavBar Partial -->

    <div class="container" id="container">
        <!-- Login form -->
        <div class="form-container log-in">
            <% if (typeof error !== 'undefined') { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>

            <form id="sign_in" action="/login" method="POST">
                <h1>Log In</h1>
                <input type="email" name="email" id="email" placeholder="Email" required>
                <div class="email error"></div>
                <input type="password" name="password" id="password" placeholder="Password" required>
                <div class="password error"></div>
                <div class="radio-group">
                    <label>
                        <input type="radio" name="accountType" value="learner" required> Learner
                    </label>
                    <label>
                        <input type="radio" name="accountType" value="teacher" required> Instructor
                    </label>
                </div>
                <button type="submit">Log In</button>
                <div class="links">
                    <a href="#" id="forgot-password-link">Forget Your Password?</a>
                    <a href="/signup">Create an Account</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Forgot Password Popup Modal -->
    <div id="forgot-password-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Forgot Password</h2>
            <form id="forgot-password-form" action="/forgot-password" method="POST">
                <input type="email" name="email" id="reset-email" placeholder="Enter your email" required>
                <button type="submit">Send Reset Link</button>
            </form>
        </div>
    </div>


    <script>
        // Script to handle the popup modal
        var modal = document.getElementById('forgot-password-modal');
        var btn = document.getElementById('forgot-password-link');
        var span = document.getElementsByClassName('close')[0];

        btn.onclick = function () {
            modal.style.display = 'block';
        }

        span.onclick = function () {
            modal.style.display = 'none';
        }

        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }
    </script>
</body>

</html>
