<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Form</title>
    <link rel="stylesheet" href="/css/contact.css">
</head>
<body>
    <!-- NavBar Partial -->
    <%- include('partials/navbar') %>

    <!-- Search Modal -->
    <div class="modal_search" id="search">
        <a href="#" class="close_search"></a>
        <div class="search_body">
            <input class="search_button" type="text" placeholder="Search" name="search">
        </div>
    </div>
    <!-- End NavBar -->

    <!-- Contact Form -->
    <div class="contact-form-container">
        <form id="contactForm">
            <label for="contactPurpose">Contact Purpose</label>
            <select id="contactPurpose" name="contactPurpose" required>
                <option value="" disabled selected>Select a purpose</option>
                <option value="support">Support</option>
                <option value="feedback">Feedback</option>
                <option value="inquiry">General Inquiry</option>
            </select>

            <label for="name">Name</label>
            <input type="text" id="name" name="name" required minlength="3">

            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>

            <label for="phone">Phone</label>
            <input type="tel" id="phone" name="phone" pattern="[0-9]{9,11}" placeholder="Optional">

            <fieldset>
                <legend>Preferred Contact Method</legend>
                <input type="radio" id="contactEmail" name="preferredContact" value="email" required>
                <label for="contactEmail">Email</label>
                <input type="radio" id="contactPhone" name="preferredContact" value="phone" required>
                <label for="contactPhone">Phone</label>
            </fieldset>

            <fieldset>
                <legend>Contact Days</legend>
                <label><input type="checkbox" name="contactDays" value="Monday"> Monday</label>
                <label><input type="checkbox" name="contactDays" value="Tuesday"> Tuesday</label>
                <label><input type="checkbox" name="contactDays" value="Wednesday"> Wednesday</label>
                <label><input type="checkbox" name="contactDays" value="Thursday"> Thursday</label>
                <label><input type="checkbox" name="contactDays" value="Friday"> Friday</label>
                <label><input type="checkbox" name="contactDays" value="Saturday"> Saturday</label>
                <label><input type="checkbox" name="contactDays" value="Sunday"> Sunday</label>
            </fieldset>

            <label for="message">Message</label>
            <textarea id="message" name="message" rows="5" required minlength="50" maxlength="500"></textarea>

            <div class="buttons">
                <button type="reset">Clear</button>
                <button type="submit">Send</button>
            </div>
        </form>
    </div>

    <!-- Footer Partial -->
    <%- include('partials/footer') %>

    <script src="scripts.js"></script>
</body>
</html>
