<!-- Pricing Table (initially hidden) -->
<div class="pricing-table" id="pricing-table">
    <h2>Subscription Fees</h2>
    <table>
        <thead>
            <tr>
                <th>Plan</th>
                <th>Fee Type</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Basic Learner</td>
                <td>Monthly Subscription</td>
                <td>$10/month</td>
            </tr>
            <tr>
                <td>Premium Learner</td>
                <td>Premium Membership</td>
                <td>$30/month</td>
            </tr>
            <tr>
                <td>Basic Instructor</td>
                <td>Monthly Subscription</td>
                <td>$15/month</td>
            </tr>
            <tr>
                <td>Instructor</td>
                <td>Commission</td>
                <td>10% per course</td>
            </tr>
        </tbody>
    </table>
    <button id="close-pricing-btn" class="close-btn">Close</button>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const menuToggle = document.getElementById('menu-toggle');
        const navMenu = document.getElementById('nav-menu');
        const browseBtn = document.getElementById('browse-btn');
        const pricingTable = document.getElementById('pricing-table');
        const closeBtn = document.getElementById('close-pricing-btn');

        // Toggle the menu visibility on smaller screens
        menuToggle.addEventListener('click', function () {
            navMenu.classList.toggle('show');
        });

        // Show the pricing table when the "Browse" button is clicked
        browseBtn.addEventListener('click', function (e) {
            e.preventDefault();  // Prevent default behavior
            pricingTable.classList.add('show-table');
        });

        // Hide the pricing table when the "Close" button is clicked
        closeBtn.addEventListener('click', function () {
            pricingTable.classList.remove('show-table');
        });
    });
</script>